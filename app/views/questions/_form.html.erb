<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :topic_id, 'Choose topic' %>
    <%= form.collection_select :topic_id, Topic.all, :id, :title, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :text, 'Type your question below' %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= form.check_box :anonymous, class: 'form-check-input' %>
    <%= form.label :anonymous, 'Post anonymously', class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= form.submit 'Post', class: 'btn btn-success' %>
  </div>
<% end %>
